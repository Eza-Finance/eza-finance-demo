   <script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('saccoDepostForm');
    const loan_id = document.getElementById('loan_id').value;
    console.log(loan_id)

    form.addEventListener('submit', async function (event) {
      event.preventDefault();

      const formData = new FormData(form);
      const formDataObject = {};
      formData.forEach((value, key) => {
        formDataObject[key] = value;
      });


      try {
        const response = await fetch('/loan_repay/'+loan_id, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formDataObject)
        });

        if (response.ok) {
          const responseData = await response.json();
          console.log(responseData)
          // alert("Success")
          window.open(responseData.url, '_blank');
          
          // window.location.href = responseData.url;
        
          // Handle success response if needed
          
        } else {
          // Handle error response
          console.error('Failed to create sacco:', response.statusText);
        }
      } catch (error) {
        console.error('Error creating sacco:', error.message);
      }
    });
  });


  document.addEventListener('DOMContentLoaded', function () {
    const form = document.getElementById('saccoWithdrawForm');

    form.addEventListener('submit', async function (event) {
      event.preventDefault();

      const formData = new FormData(form);
      const formDataObject = {};
      formData.forEach((value, key) => {
        formDataObject[key] = value;
      });

      try {
        const response = await fetch('/sacco_withdraw', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formDataObject)
        });

        if (response.ok) {
          const responseData = await response.json();
          console.log(responseData)
          alert("Success")
          window.location.reload()
          
          // window.location.href = responseData.url;
        
          // Handle success response if needed
          
        } else {
          // Handle error response
          console.error('Failed to create sacco:', response.statusText);
        }
      } catch (error) {
        console.error('Error creating sacco:', error.message);
      }
    });
  });
</script>