        <% saccos.forEach(function(sacco) { %>
        
            <li class="list-group-item">
              <strong>Sacco Name:</strong> <%= sacco.name %><br>
              <strong>Rafiki Wallet Balance:</strong>Ksh <%= sacco.current_wallet_balance %><br>
              <strong>Wallet Address:</strong> <%= sacco.wallet_address %><br>
              <strong>ILP Payment Pointer:</strong> <%= sacco.ilp_payment_pointer %><br>
              <!-- <button type="button" class="btn btn-primary" data-mdb-ripple-init data-mdb-modal-init data-mdb-target="#saccoDepositModal">
                Deposit
