      <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->


    <section class="h-100 gradient-custom-2">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-lg-12 col-xl-12">
            <div class="row">
              <div class="col-md-3">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Current Circle USDC Balance</h5>
                    <p class="card-text">USDC <%= usdcAmount %> </p>
                  </div>
                </div>
              </div>
      
              <div class="col-md-3">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Total Registered DAOs</h5>
                    <p class="card-text"><%= daos.length %></p>
                  </div>
                </div>
              </div>
      
              <div class="col-md-3">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Registered Saccos</h5>
                    <p class="card-text"><%= saccos.length %> </p>
                  </div>
                </div>
              </div>
      
      
              <div class="col-md-3">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Total Loans Requested </h5>
                    <p class="card-text"><%= loans.length %></p>
                  </div>
                </div>
              </div>
              
      
              <div class="col-md-3" style="margin-top: 20px;">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Registered Liquidator</h5>
                    <p class="card-text"><%= liquidators.length %></p>
                  </div>
                </div>
              </div>
      
              <div class="col-md-3" style="margin-top: 20px;">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Eza Wallet Balance</h5>
                    <p class="card-text">Ksh <%= eza_balance %></p>
                  </div>
                </div>
              </div>
      
      
            
      
            </div>
            <!-- my loans -->
            <h3 class="mt-3 mb-3">Loans</h3>
            <p>All requested & serviced loans</p>
          
            <table class="table align-middle mb-0 bg-white table-responsive table-bordered">
              <thead class="bg-light">
                <tr>
                  <th>Reference</th>
                  <th>Borrower</th>
                  <th>Lender</th>
                  <th>Borrowed Amount</th>
                  <th>Interest Rate</th>
                  <th>Repayment Amount</th>
                  <th>Repayed Amount</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (sacco_loans !== null) { %>
                  <% sacco_loans.forEach(function(loan) { %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="ms-3">
                            <p class="fw-bold mb-1">LN-Q7RASA0<%= loan.id %></p>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="fw-normal mb-1"><%= loan.sacco_name %></p>
                      </td>
                      
                      <td>
                        <p class="fw-normal mb-1"><%= loan.dao_name %></p>
                      </td>
                      <td>Ksh <%= loan.amount %></td>
                      <td><%= loan.interest_rate %>%</td>
                      <td>Ksh <%= loan.repayment_amount %></td>
                      <td>Ksh <%= loan.repaid_amount %></td>
                      <td>
                        <% if (loan.loan_status === "ACTIVE") { %>
                          <span class=" badge-success rounded-pill d-inline"><%= loan.loan_status %></span>
                        <% } else {%>
                          <span class=" badge-warning rounded-pill d-inline"><%= loan.loan_status %></span>
                        <% } %>
                      </td>
                      
                      <td>
                        <% if (loan.loan_status === "ACTIVE" || loan.loan_status === "PENDING" ) { %>
                          -
                        <% } else {%>
                          <button type="button" class="btn btn-link btn-sm btn-rounded" data-mdb-modal-init data-mdb-target="#loanApproval">
                            Approve
                          </button>
                          <button type="button" class="btn btn-link btn-sm btn-rounded" >
                            Decline
                          </button>

                             <!-- Modal -->
                          <div class="modal fade" id="loanApproval" tabindex="-1" aria-labelledby="loanApproval" aria-hidden="true">
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title" id="exampleModalLabel">Approve Loan</h5>
                                  <button type="button" class="btn-close" data-mdb-ripple-init data-mdb-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                  <form id="loanApprovalForm">

                                    <div class="mb-3">
                                      <input type="text" class="form-control" id="loan_id" name="loan_id" hidden value="<%= loan.id %>">
                                    </div>
                                
                                    <div class="mb-3">
                                      <label for="amount" class="form-label">Enter Interest Rate</label>
                                      <input type="text" class="form-control" id="interest_rate" name="interest_rate">
                                    </div>

                                    <div class="mb-3">
                                      <label for="credit_score" class="form-label">Enter Credit Score</label>
                                      <input type="text" class="form-control" id="credit_score" name="credit_score">
                                    </div>
                                    <!-- Add more input fields as needed -->
                                    <button type="submit" class="btn btn-primary" data-mdb-ripple-init>Send to DAO</button>
                                  </form>

                                
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-secondary" data-mdb-ripple-init data-mdb-dismiss="modal">Close</button>
                                
                                </div>
                              </div>
                            </div>
                          </div>

                        <% } %>
                       
                      </td>
                       
                    </tr>
                    <% }); %>
                  <% } else { %>
                    <li class="list-group-item">No Loans</li>
                <% } %>
              
              </tbody>
            </table>

          
          </div>
        </div>
      </div>
    </section>

</body>

   <!-- Bootstrap JavaScript -->
   <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- MDB -->
    <script
    type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"
    ></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
          const form = document.getElementById('loanApprovalForm');

          form.addEventListener('submit', async function (event) {
            event.preventDefault();

            const formData = new FormData(form);
            const formDataObject = {};
            formData.forEach((value, key) => {
              formDataObject[key] = value;
            });

            const loan_id = document.getElementById('loan_id').value;
            console.log(loan_id)
            console.log('/sacco_first_loan_approve/'+loan_id)

            try {
              const response = await fetch('/sacco_first_loan_approve/'+loan_id, {
                method: 'PATCH',
                headers: {
                  'Content-Type': 'application/json'
                },
                body: JSON.stringify(formDataObject)
              });

              if (response.ok) {
                const responseData = await response.json();
                console.log(responseData)
                alert(responseData.message)
                location.reload()
                
                // window.location.href = responseData.url;
              
                // Handle success response if needed
                
              } else {
                // Handle error response
                console.error('Failed to create sacco:', response.statusText);
              }
            } catch (error) {
              console.error('Error creating sacco:', error.message);
            }
          });
        });
    </script>
</html>
